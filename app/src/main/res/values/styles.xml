<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MyApplication">
        <item name="android:background">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonOperationTheme">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="ButtonOperationThemeDark">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="ButtonNumberTheme">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="ButtonNumberThemeDark">
    <item name="android:backgroundTint">@color/grey</item>
    <item name="cornerRadius">@dimen/corner_radius</item>
    <item name="android:layout_marginStart">@dimen/layout_margin</item>
    <item name="android:layout_marginEnd">@dimen/layout_margin</item>
    <item name="android:layout_marginTop">@dimen/layout_margin</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/button_textSize</item>
    <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:background">@drawable/round_angle_text_view</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:paddingEnd">@dimen/padding_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewThemeDark">
        <item name="android:background">@drawable/round_angle_text_view_night</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:paddingEnd">@dimen/padding_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>